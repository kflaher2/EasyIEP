<h1>Editing Teacher #<%= @teacher.id %></h1>

<form action="/teachers/<%= @teacher.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @teacher.name  %>" type="text" />
  </div>
  <div>
    <label for="email">email</label><br />
    <input id="email" name="email" value="<%= @teacher.email  %>" type="text" />
  </div>
  <div>
    <label for="subject">subject</label><br />
    <input id="subject" name="subject" value="<%= @teacher.subject  %>" type="text" />
  </div>
  <div>
    <label for="password">password</label><br />
    <input id="password" name="password" type="password" />
  </div>
  <div>
    <label for="password_confirmation">password confirmation</label><br />
    <input id="password_confirmation" name="password_confirmation" type="password" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


