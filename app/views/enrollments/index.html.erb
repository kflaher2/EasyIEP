<h1>Enrollments</h1>

<p><a href="/new_enrollment">Add a New Enrollment</a></p>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Period</th>
      <th>Teacher</th>
      <th>Student</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @enrollments.each do |enrollment| %>
    <tr>
          <td><%= enrollment.subject %></td>
          <td><%= enrollment.period %></td>
          <td><%= enrollment.teacher_id %></td>
          <td><%= enrollment.student_id %></td>
          <td><a href="/enrollments/<%= enrollment.id %>">Show</a>
        </td>
      <% if session[:teacher_id] == 1 %>
      <td><a href="/enrollments/<%= enrollment.id %>/edit">Edit</a></td>
      <td><a href="/enrollments/<%= enrollment.id %>/destroy">Destroy</a></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

